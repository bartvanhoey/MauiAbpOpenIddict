<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBookStore.Views.LoginPage">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20" IsVisible="{Binding IsLoginVisible}">
        <Button Text="Login" FontAttributes="Bold" Command="{Binding ExecuteLoginCommand}"
                HorizontalOptions="FillAndExpand" />
    </StackLayout>
</ContentPage>